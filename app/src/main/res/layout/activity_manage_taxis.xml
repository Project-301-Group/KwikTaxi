<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Manage Taxis"
        app:navigationIcon="@drawable/baseline_arrow_back_24" />

    <!-- Rank Header -->
    <TextView
        android:id="@+id/tvRankName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rank: Loading..."
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="16dp"
        android:textColor="@android:color/black" />

    <!-- Empty state under rank name when there are no taxis -->
    <TextView
        android:id="@+id/tvEmptyTaxis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No taxis yet at this rank"
        android:textSize="14sp"
        android:textColor="#666666"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp"
        android:visibility="gone" />

    <!-- RecyclerView for taxis -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvTaxis"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Floating button to add taxi -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddTaxi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="24dp"
        android:contentDescription="Add taxi"
        app:srcCompat="@drawable/baseline_add_24" />

</LinearLayout>
