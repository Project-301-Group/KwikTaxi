<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragmentCreateTaxi"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvSelectTaxiTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create New Taxi"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingBottom="8dp" />

    <!-- Selected destination display -->
    <TextView
        android:id="@+id/tvSelectedDestination"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No destination selected"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="12dp"
        android:background="#E3F2FD"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />

    <!-- Selected driver display -->
    <TextView
        android:id="@+id/tvSelectedDriver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No driver selected"
        android:textSize="14sp"
        android:textColor="#666666"
        android:padding="12dp"
        android:background="#E3F2FD"
        android:layout_marginBottom="8dp"
        android:visibility="gone"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground" />

    <!-- Taxi details input -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="12dp">

        <EditText
            android:id="@+id/etRegistrationNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Registration Number (required)"
            android:inputType="text" />

        <EditText
            android:id="@+id/etCapacity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Capacity (default: 4)"
            android:inputType="number" />

        <EditText
            android:id="@+id/etStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Status (default: available)"
            android:inputType="text" />
    </LinearLayout>

    <!-- Save button -->
    <Button
        android:id="@+id/createTaxiBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Taxi"
        android:layout_marginTop="16dp" />

</LinearLayout>

