<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- App Bar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:title="Manage Rank Destinations"
        app:navigationIcon="@drawable/baseline_arrow_back_24"
        />

    <!-- Rank Header -->
    <TextView
        android:id="@+id/tvRankName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Rank: Warwick Junction"
        android:textStyle="bold"
        android:textSize="18sp"
        android:padding="16dp"
        android:textColor="@android:color/black" />

    <!-- RecyclerView for rank destinations -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvRankDestinations"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        android:clipToPadding="false" />

    <!-- Floating button to add route -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAddRoute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        android:layout_margin="24dp"
        android:contentDescription="Add route"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

</LinearLayout>
